<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.MyzCommentsMapper">
    
    <resultMap type="MyzComments" id="MyzCommentsResult">
        <result property="commentId"    column="comment_id"    />
        <result property="articleId"    column="article_id"    />
        <result property="articleType"    column="article_type"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="userEmail"    column="user_email"    />
        <result property="parentCommentId"    column="parent_comment_id"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="createdAt"    column="created_at"    />
    </resultMap>

    <sql id="selectMyzCommentsVo">
        select comment_id, article_id, article_type, user_id, user_name, user_email, parent_comment_id, content, status, created_at from myz_comments
    </sql>

    <select id="selectMyzCommentsList" parameterType="MyzComments" resultMap="MyzCommentsResult">
        <include refid="selectMyzCommentsVo"/>
        <where>  
            <if test="articleId != null "> and article_id = #{articleId}</if>
            <if test="articleType != null "> and article_type = #{articleType}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="userEmail != null  and userEmail != ''"> and user_email = #{userEmail}</if>
            <if test="parentCommentId != null "> and parent_comment_id = #{parentCommentId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectMyzCommentsByCommentId" parameterType="Long" resultMap="MyzCommentsResult">
        <include refid="selectMyzCommentsVo"/>
        where comment_id = #{commentId}
    </select>

    <insert id="insertMyzComments" parameterType="MyzComments" useGeneratedKeys="true" keyProperty="commentId">
        insert into myz_comments
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="articleId != null">article_id,</if>
            <if test="articleType != null">article_type,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null">user_name,</if>
            <if test="userEmail != null">user_email,</if>
            <if test="parentCommentId != null">parent_comment_id,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="status != null and status != ''">status,</if>
            created_at,
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="articleId != null">#{articleId},</if>
            <if test="articleType != null">#{articleType},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null">#{userName},</if>
            <if test="userEmail != null">#{userEmail},</if>
            <if test="parentCommentId != null">#{parentCommentId},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="status != null and status != ''">#{status},</if>
            sysdate(),
         </trim>
    </insert>

    <update id="updateMyzComments" parameterType="MyzComments">
        update myz_comments
        <trim prefix="SET" suffixOverrides=",">
            <if test="articleId != null">article_id = #{articleId},</if>
            <if test="articleType != null">article_type = #{articleType},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="userEmail != null">user_email = #{userEmail},</if>
            <if test="parentCommentId != null">parent_comment_id = #{parentCommentId},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </trim>
        where comment_id = #{commentId}
    </update>

    <delete id="deleteMyzCommentsByCommentId" parameterType="Long">
        delete from myz_comments where comment_id = #{commentId}
    </delete>

    <delete id="deleteMyzCommentsByCommentIds" parameterType="String">
        delete from myz_comments where comment_id in 
        <foreach item="commentId" collection="array" open="(" separator="," close=")">
            #{commentId}
        </foreach>
    </delete>
</mapper>